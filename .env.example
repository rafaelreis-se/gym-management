# Application
NODE_ENV=development
PORT=3000
SERVICE_NAME=gym-management-api
HOST=0.0.0.0

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=gym_management
DB_SYNCHRONIZE=false
DB_LOGGING=false

# JWT Authentication
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-SECRET-IN-PRODUCTION
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE-THIS-TO-ANOTHER-STRONG-SECRET-IN-PRODUCTION
JWT_REFRESH_EXPIRES_IN=30d

# Password Hashing & Security
BCRYPT_ROUNDS=12
MIN_PASSWORD_LENGTH=8

# Password Policy (for validation)
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SYMBOLS=true

# OAuth2 - Google (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# OAuth2 - Facebook (optional)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/auth/facebook/callback

# NFS-e Configuration (Araxá - MG)
# Electronic Service Invoice configuration for Araxá municipality

# NFS-e Webservice Configuration
NFSE_WEBSERVICE_URL=https://webservice.araxa.mg.gov.br
NFSE_CHAVE_ACESSO=your-access-key-from-municipal-portal

# Digital Certificate Configuration
NFSE_CERTIFICATE_PATH=/path/to/your/certificate.pfx
NFSE_CERTIFICATE_PASSWORD=your-certificate-password

# NFS-e Provider Information (Your Gym)
NFSE_PROVIDER_CNPJ=12345678000195
NFSE_PROVIDER_INSCRICAO_MUNICIPAL=123456
NFSE_PROVIDER_RAZAO_SOCIAL=Your Gym Name
NFSE_PROVIDER_NOME_FANTASIA=Your Gym Fantasy Name

# NFS-e Environment
NFSE_ENVIRONMENT=HOMOLOGATION
